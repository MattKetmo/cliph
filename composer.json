{
    "name": "mattketmo/cliph",
    "description": "Example of CLI app in PHP",
    "license": "MIT",
    "require": {
        "symfony/console": "^2.3 || ^3.0",
        "herrera-io/phar-update": "~1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.6"
    },
    "autoload": {
        "psr-4": {
            "Cliph\\": "src/Cliph"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Cliph\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit --colors=always"
    }
}
